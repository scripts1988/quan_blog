<% if notice != '' %>
  <% if notice %>
    <div class="alert alert-success"><%= notice %></div>
  <% end %>
<% end %>

<br>

<div class="container">
  <div class="row">
    <div class="col-sm-6">
      <div class="card">
          <div class="card-header">
          <%= @article.view %> Views
          </div>
        <div class="card-block">
          <h3 class="card-title"><%= @article.title %></h4>
          <br>
          <h6 class="card-text"><%= @markdown.render(@article.body).html_safe %></h6>
        </div>
      </div>
    </div>
  </div>

  <br>
  <%= link_to 'Edit', edit_article_path(@article) %> |
  <%= link_to 'Back', articles_path %>
</div>
